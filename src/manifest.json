{
    "name": "淘宝千牛后台图片视频资源批量下载",
    "description": "淘宝下载",
    "version": "1.0.0",
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "downloads",
        "scripting"
    ],
    "host_permissions": [
        "https://dreamstep.top/"
    ],
    "optional_host_permissions": [
        "*://*/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/*"
            ],
            "matches": [
                "*://*/*"
            ]
        },
        {
            "resources": [
                "script/*"
            ],
            "matches": [
                "*://*/*"
            ]
        },
        {
            "resources": [
                "page/*"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "background": {
        "service_worker": "script/background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Download",
        "default_popup": "page/popup.html",
        "default_icon": {
            "16": "images/download_16.png",
            "32": "images/download_32.png",
            "48": "images/download_48.png",
            "128": "images/download_128.png"
        }
    },
    "icons": {
        "16": "images/download_16.png",
        "32": "images/download_32.png",
        "48": "images/download_48.png",
        "128": "images/download_128.png"
    },
    "content_scripts": [
        {
          "matches": ["https://*.taobao.com/*"],
          "run_at":"document_end",
          "js": ["script/content-script.js"]
        }
      ],
    "manifest_version": 3
}